execute pathogen#infect()
syntax on
filetype plugin indent on


syntax enable
set background=dark
colorscheme solarized


let g:syntastic_check_on_open = 1
let g:syntastic_check_on_wq = 1

set expandtab ts=4 sw=4 ai
set smartindent
set number
filetype indent plugin on
set history=500
filetype plugin on
filetype indent on
set hlsearch
set ignorecase
set smartcase
set incsearch
set magic
set smarttab
set shiftwidth=4
set tabstop=4
